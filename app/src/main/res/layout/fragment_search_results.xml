<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SearchResultsFragment">

    <TextView
        android:id="@+id/resultsLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Search Results"
        android:textColor="#0D1321"
        android:textSize="24sp"
        android:textStyle="bold"
        app:fontFamily="@font/kreon" />

    <TextView
        android:id="@+id/resultsInstructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Below are recipes that have matched your search."
        android:textColor="#0D1321"
        android:textSize="18sp"
        android:visibility="visible"
        app:fontFamily="@font/kreon" />

    <ListView
        android:id="@+id/results"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:choiceMode="singleChoice"
        android:listSelector="#dbdbdb" />

</LinearLayout>