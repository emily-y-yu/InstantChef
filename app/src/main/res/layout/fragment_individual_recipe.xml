<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".IndividualRecipeFragment">

    <TextView
        android:id="@+id/recipeNameLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="#0D1321"
        android:textSize="24sp"
        android:textStyle="bold"
        app:fontFamily="@font/kreon" />

    <Button
        android:id="@+id/favoriteButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#C5D86D"
        android:text="Add to Recipe Bank"
        android:visibility="gone" />

    <Button
        android:id="@+id/unfavoriteButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#C5D86D"
        android:text="Remove from Recipe Bank"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/recipeAuthorLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="3"
            android:text="Author"
            android:textColor="#0D1321"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/recipeAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:textColor="#0D1321"
            android:textSize="18sp"
            app:fontFamily="@font/kreon" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/recipeCuisineLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="3"
            android:text="Cuisine"
            android:textColor="#0D1321"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/recipeCuisine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:textColor="#0D1321"
            android:textSize="18sp"
            app:fontFamily="@font/kreon" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/recipeCategoryLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="3"
            android:text="Category"
            android:textColor="#0D1321"
            android:textSize="18sp"
            android:textStyle="bold"
            app:fontFamily="@font/kreon" />

        <TextView
            android:id="@+id/recipeCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:textColor="#0D1321"
            android:textSize="18sp"
            app:fontFamily="@font/kreon" />
    </LinearLayout>

    <TextView
        android:id="@+id/recipeIngredientsLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:text="Ingredients"
        android:textColor="#0D1321"
        android:textSize="18sp"
        android:textStyle="bold"
        app:fontFamily="@font/kreon" />

    <ListView
        android:id="@+id/recipeIngredients"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_marginBottom="5dp">

    </ListView>

    <TextView
        android:id="@+id/recipeInstructionsLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:text="Instructions"
        android:textColor="#0D1321"
        android:textSize="18sp"
        android:textStyle="bold"
        app:fontFamily="@font/kreon" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recipeInstructions"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="#0D1321"
                android:textSize="18sp"
                app:fontFamily="@font/kreon" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>